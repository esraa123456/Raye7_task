<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
       <h3 id="myModalLabel"><%= @trip.source %>-<%= @trip.destination %></h3>
     </div>
     <div class="modal-body">
       <p>
         <strong>Departure Time:</strong>
         <%= @trip.departure_time.strftime("%l:%M %p") %>
       </p>

       <p>
         <strong>Source:</strong>
         <%= @trip.source %>
       </p>

       <p>
         <strong>Destination:</strong>
         <%= @trip.destination %>
       </p>

       <p>
         <strong>Seats:</strong>
         <%= @trip.no_of_seats %>
       </p>
     </div>
     <div class="modal-footer">
       <%= link_to 'Back', trips_path, class: "btn btn-default" %>
       <% if @trip.user == current_user || current_user.try(:0?) %>
         <br><br><%= link_to 'Edit', edit_trip_path(@trip) , class: "btn btn-warning"%>
         <%= link_to 'Destroy', @trip, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%>
       <% end %>
     </div>
   </div>
 </div>
